include <stdio.h>
int main () 
   {
   int pin;
   int a=1234 ;
   for (int i=0;i<3;i++){
       printf("Enter the pin ");
            scanf("%d",&pin);
        if(a==pin)
        {
            printf("collect your cash");
            
        }
       else if(i==2){
        printf ("Your card is Blocked ");
        break;
        }
        else if(a!=pin)
        {
            printf("incorrect pin\n"); 
            
        }
        
        
    }
 
    return 0;
}
